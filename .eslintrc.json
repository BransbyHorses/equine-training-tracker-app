{
	"extends": [
		"eslint:recommended",
		"next"
	],
	"plugins": ["@typescript-eslint"],
	"ignorePatterns": ["**/*.test.ts", "**/*.test.tsx"],
	"rules": {
		"no-mixed-spaces-and-tabs": 0,
		"no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
		"@typescript-eslint/no-unused-vars": [
			"error",
			{ "argsIgnorePattern": "^_" }
		]
	}
}
